%h1 Listing users

%table.table.table-bordered.table-hover
  %thead
    %tr
      %th Name
      %th Email
      %th Active
      %th Block
      %th
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr{:class => user.block ? "danger" : user.active ? "success" : ""}
        %td= user.name
        %td= user.email
        %td= user.active
        %td= user.block
        %td= link_to 'Show', user, class: "btn btn-primary"
        %td= link_to 'Edit', edit_user_path(user), class: "btn btn-primary"
        %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary"

%br
  = link_to 'New User', new_user_path, class: "btn btn-primary"